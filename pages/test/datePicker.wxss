/* pages/test/datePicker.wxss */
/* 日期选择弹框 start */
.main .date-layer {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.65);
  position: fixed;
  top: 0;
  z-index: 20;
}
.date-layer .layer-box {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
}
.date-layer .layer-box .box-top {
  padding: 30rpx 0;
  position: relative;
}
.date-layer .layer-box picker-view {
  height: 120px;
  width: 88%;
  margin: 0 auto;
}
.date-layer .layer-box .picker-indicator {
  height: 40px;
  line-height: 40px;
}
.date-layer .layer-box picker-view-column view {
  width: 96%;
  line-height: 42px;
  margin: 0 auto;
  text-align: center;
}
.date-layer .layer-box .box-top .top-background {
  width: 88%;
  height: 80rpx;
  margin: 0 auto;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  position: absolute;
  display: flex;
}
.layer-box .box-top .top-background view {
  width: 96%;
  height: 100%;
  margin: 0 auto;
  background: rgba(195, 218, 49, 0.12);
  border-top: 2rpx solid #D9E87D;
  border-bottom: 2rpx solid #C3DA31;
  margin: 0 4rpx;
  box-sizing: border-box;
}
.date-layer .layer-box .box-bottom {
  display: flex;
}
.date-layer .layer-box .box-bottom button {
  width: 50%;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0;
  padding: 0;
  font-size: 34rpx;
  background: #fff;
  border: none;
  border-top: 2rpx solid #D8D8D8;
  border-radius: 0;
}
.date-layer .layer-box .box-bottom .btn-confirm {
  color: #C3DA31;
  border-right: 1rpx solid #D8D8D8;
}
.date-layer .layer-box .box-bottom .btn-cancel {
  color: #B1B1B4;
  border-left: 1rpx solid #D8D8D8;
}
/* 日期选择弹框 end */