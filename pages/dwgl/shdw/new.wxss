/* pages/dwgl/shdw/new.wxss */
.main_v{
  width: 100%;
}
.main_v .title_v{
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  background-color: #eee;
}
.main_v .back_but_v{
  height: 40px;
  line-height: 40px;
  margin-top: -40px;
  margin-left: 10px;
}
.main_v .add_v{
  width: 95%;
  margin: auto;
}
.main_v .add_v .row_v{
  width: 95%;
  margin: auto;
}
.main_v .add_v .key_v{
  width:80px;
  height:40px;
  line-height:40px;
  margin-left:8px;
  text-align:center;
}
.main_v .add_v .val_v{
  height:40px;
  line-height:40px;
  margin-top:-40px;
  margin-left:120px;
}
.main_v .add_v .mc_inp{
  margin-top:10px;
  border: #eee solid 1px;
  border-radius: 3px;
}
.main_v .add_v .dl_select_v{
  width: 150px;
  height: 30px;
  margin-top: -40px;
  margin-left: 120px;
  background-color: #fff;
  border: #eee solid 1px;
}
.main_v .add_v .dl_select_v .selected_text_v{
  width: 120px;
  height: 30px;
  line-height: 30px;
  padding-left: 10px;
  font-size: 15px;
  background-color: #0f0;
}
.main_v .add_v .dl_select_v .select_img{
  width: 17px;
  height: 17px;
  float: right;
  margin-top: -25px;
  margin-right: 3px;
}
.main_v .add_v .dl_select_v .select_img_rotate{
  transform: rotate(180deg);
}
.main_v .add_v .dl_option_list_v{
  width: 150px;
  margin-top: 1px;
  margin-left: 120px;
  background-color: #eee;
  overflow-y: auto;
  position: absolute;
  z-index: 3;
}
.main_v .add_v .dl_option_list_v .item_v{
  width: 100%;
  height: 30px;
  line-height: 30px;
  padding-left: 10px;
  background-color: #0f0;
}

.main_v .bottom_v{
  width: 100%;
  height: 50px;
  background-color: #F8F8F8;
  bottom: 0;
  position: fixed;
}
.main_v .bottom_v .but_list_v{
  width: 95%;
  margin: auto;
}
.main_v .bottom_v .but_list_v .but_v{
  width: 45%;
  height: 30px;
  line-height: 30px;
  margin-top: 10px;
  text-align: center;
  border: #BFBFBF solid 1px;
  border-radius:3px;
}
.main_v .bottom_v .but_list_v .more_but_v{
  float: right;
  margin-top:-32px;
}